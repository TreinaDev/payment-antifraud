<article>
  <main>
    <div id="attributes">
      <h3> <%= Invoice.human_attribute_name(:invoice) %> </h3>
      <% if @invoices.any? %>
        <table class="table table-striped", style="width: 100%">
          <thead>
            <tr>
              <th scope="col"><%= Invoice.human_attribute_name :token %></th>
              <th scope="col"><%= Invoice.human_attribute_name :status %></th>
              <th scope="col">Seguradora</th>
              <th scope="col"><%= Invoice.human_attribute_name :package_id %></th>
            </tr>
          </thead>
          <tbody>
            <% @invoices.each do |invoice| %>
              <tr>
                <td><%= invoice.token %></td>
                <td><%= t(invoice.status) %></td>
                <td><%= invoice.insurance_company.external_insurance_company %></td>
                <td><%= invoice.package_id %></td>
                <td><%= link_to 'Ver mais', invoice_path(invoice.id), class: 'btn btn-light' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>  

  </main>
</article>