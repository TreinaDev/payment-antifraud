<div class="card border-light" style="max-width: 54rem;">
  <div class = "card border-dark mb-3" style="max-width: 54rem;">
    <div class="card-header bg-transparent border-dark"><h5> <%= @invoice.token %></h5></div>
    <div class="row g-0">
      <div class="col-md-8">

        <div class="card-body" id="attributes">
          <ul class="list-group list-group-flush" >
            <li class="list-group-item">
              <h5 class="card-title"><%= Invoice.human_attribute_name :status  %>: <%= t( @invoice.status) %></h5>
            </li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :insurance_company_id %>: <%= @insurance_company_id %></li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :package_id %>: <%= @package_id %></li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :registration_number %>: <%= @invoice.registration_number %></li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :order_id %>: <%= @invoice.order_id %></li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :payment_method_id %>: <%= @invoice.payment_method.name %></li>
            <li class="list-group-item"><%= PaymentMethod.human_attribute_name :payment_type %>: <%= @invoice.payment_method.payment_type %></li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :voucher %>: <%= @invoice.voucher %> </li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :parcels %>: <%= @invoice.parcels %> </li>
            <li class="list-group-item"><%= Invoice.human_attribute_name :total_price %>: <%= number_to_currency(@invoice.total_price) %></li>
            <% if @invoice.approved?%>
              <li class="list-group-item"><%= Invoice.human_attribute_name :transaction_registration_number %>: <%= @invoice.transaction_registration_number %></li>
            <% elsif @invoice.refused?%>
              <li class="list-group-item"><%= Invoice.human_attribute_name :reason_for_failure %>: <%= @invoice.reason_for_failure %></li>
            <% end %>
            <% if @invoice.pending? %>
              <p><%= link_to 'Sucesso no Pagamento', edit_invoice_url(status: 'approved'), class: "btn btn-primary btn-m" %></p>
              <p><%= link_to 'Falha no Pagamento', edit_invoice_url(status: 'refused'), class: "btn btn-primary btn-m" %></p>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

