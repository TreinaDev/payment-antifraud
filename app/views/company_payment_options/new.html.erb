<article>
  <header>
    <h2> Configurar Meio de Pagamento </h2>
  </header>
  <main>
    <%= form_with model: @payment_option do |f| %>
      <p>
        <%= f.label :payment_method_id %>
        <%= f.collection_select :payment_method_id, @payment_methods, :id, :name, prompt: true, class: "form-control" %>
      </p>
      <p>
        <%= f.label :max_parcels %>
        <%= f.number_field :max_parcels, class: "form_control" %>
      </p>
      <p>
        <%= f.label :single_parcel_discount %>
        <%= f.number_field :single_parcel_discount, class: "form-control" %>
      </p>
      <p>
        <%= f.submit t('buttons.send'), class: "btn btn-primary btn-m" %>
      </p>
    <% end %>
  </main>
</article>