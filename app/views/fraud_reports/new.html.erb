    <%= form_with model: @fraud_report do |f| %>
      <p>
        <%= f.label :registration_number %>
        <%= f.number_field :registration_number, placeholder: 'CPF do cliente', class: 'form-control', style:'max-width: 30rem' %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: 'Causas da denÃºncia', class: 'form-control', style:"max-width: 30rem" %>
      </p>
      <p>
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control", style:"max-width: 30rem'  %>
